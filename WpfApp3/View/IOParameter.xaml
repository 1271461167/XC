                                    <DataTemplate>
                                        <controls:LED Style="{StaticResource myLED}" Height="20" IsTrue="{Binding}" Margin="2.5"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
